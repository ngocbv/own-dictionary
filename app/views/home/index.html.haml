%div.container
  %div.row
    %div.col.align-self-center
      %h1 Dictionary

      = form_tag(home_index_path, method: :get, class: 'form-inline') do
        %input.form-control{"type" => "text", "placeholder" => "Search for...", "aria-label" => "Search for...", "name" => "query"}
        %button.btn.btn-outline-success{"type" => "submit"} Go!

      -# @word = Word.find_by(name: params['query'])
      -# @pronunciation = word.pronunciation
      -# @meanings = word.meanings
      - if @word
        %h2= @word.name
        %span= @pronunciation.try(:phonetic_spelling)
        - if @meanings.present?
          %ul
            - @meanings.each do |meaning|
              %li= meaning.definition.capitalize
              = meaning.examples.pluck(:content).join(' | ')
